{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",
    "lib": ["es6", "dom", "esnext"],
    
    /* Modules */
    "module": "ES2020",
    "moduleResolution": "node",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "*": ["src/types/*"]
    },
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "types": ["node"],

    /* Emit */
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,

    /* Module Resolution */
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,

    /* Type Checking */
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,

    /* Completeness */
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"]
}